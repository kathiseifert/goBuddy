<div id="tigerViewLogIn-Wrapper">
  <div class="tigerLeft">
    <div>
      <form
        class="tigerInputIntroduction"
        method="POST"
        action="/auth/tigerView"
      >
        <p>
          <label for="tigerIntro">Write a few sentence about yourself:</label><br
          />
          {{! <input type="text" id="tigerIntro" name="tigerIntro" /> }}
          <textarea type="text" id="tigerIntro" name="tigerIntro">{{userInSession.profileInput.tigerIntro}}</textarea>
          {{! <INPUT type="submit" value="Send"><INPUT type="reset"> }}
          <label for="helpDef">Write a few sentence about the help you need:</label><br/>
          <textarea type="text" id="helpDef" name="helpDef">{{userInSession.profileInput.helpDef}}</textarea>
        </p>
        <div>
          <button class="update-Btn" type="submit">Update your profile</button>
        </div>

      </form>
    </div>

  </div>

  <div class="tigerRight">
    <div class="tigerMailbox">
      <h3>Your Mailbox: You got XY messages</h3>
      {{! TODO: Insert/display message inbox }}
    </div>
  </div>
</div>