<div id="navbarUser">
  <ul>
    <div>
      <li>
        {{#if userInSession}}
          <h2>Welcome {{userInSession.username}} !</h2>
        {{else}}
          <p>Still no logged in user, sorry!</p>
        {{/if}}
      </li>
    </div>
    <div class="navbarUserWrapper">
      <li>
        <button>
          <a href="/auth/tigerView">Go back to your inbox</a>
        </button>
      </li>
      {{! doesnt work like this: }}
      {{! <a href="/auth/logout">Logout</a> }}
      {{! works like this but looks ugly: }}
      <li>
        <form id="logout-form" action="/auth/logout" method="POST">
          <button>Logout</button>
        </form>
      </li>
    </div>
  </ul>
</div>

<div>
  <div class="inboxTiger">
    <h4>Your Conversation with XY</h4>
    {{! display conversation with user }}

    <button>Dismiss/Next Mail</button>
  </div>

  <div class="writeMessage">
    <h4>Write your answer here</h4>
    <!-- Input form and submission -->
    <form class="message-form">
      <input
        type="text"
        class="typedMessage"
        placeholder="Type Your Message..."
      />
      <button class="submit">Send Reply</button>
    </form>

  </div>
</div>