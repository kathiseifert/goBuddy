
<div id="navbarUser">
    <ul>
      <div>
      <li>
        {{#if userInSession}}
          <h2>Welcome {{userInSession.username}} !</h2>
        {{else}}
          <p>Still no logged in user, sorry!</p>
        {{/if}}
      </li>
      </div>
      <div class="navbarUserWrapper">
      <li>
        <button>
          <a href="/auth/buddyView">Go back to overview</a>
        </button>
      </li>
         <li>
        <button>
          <a href="/interact/inboxBuddy">Refresh Page</a>
        </button>
      </li>
      <li>
        <form id="logout-form" action="/auth/logout" method="POST">
          <button>Logout</button>
        </form>
      </li>
      </div>
    </ul>
</div>



<div class="inboxBuddy">
  <h3>Inbox</h3>
  {{#each msgs}}
  {{this.sender.username}} wrote: {{this.content}}
  {{/each}}

  <div class="messenger-Box">
    <h4>Write your answer here</h4>
    <!-- Input form and submission -->
    <form class="message-form" method="POST" action="/interact/tigerslist/{{userInSession._id}}/message">
      <input
        name="typedMessage"
        type="text"
        class="typedMessage"
        placeholder="Type Your Message..."
      />
      <button class="submit">Send Reply</button>
    </form>

  </div>
{{!-- display all messages from userInSession --}}
</div>